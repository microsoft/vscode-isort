{
    "name": "isort",
    "displayName": "isort",
    "description": "Import sorting support for python files using `isort`.",
    "version": "2022.3.0-dev",
    "preview": true,
    "formatter": {
        "name": "isort",
        "module": "isort"
    },
    "publisher": "ms-python",
    "license": "MIT",
    "homepage": "https://github.com/Microsoft/vscode-isort",
    "repository": {
        "type": "git",
        "url": "https://github.com/microsoft/vscode-isort.git"
    },
    "bugs": {
        "url": "https://github.com/Microsoft/vscode-isort/issues"
    },
    "icon": "icon.png",
    "galleryBanner": {
        "color": "#1e415e",
        "theme": "dark"
    },
    "keywords": [
        "python",
        "formatting",
        "isort"
    ],
    "engines": {
        "vscode": "^1.64.0"
    },
    "categories": [
        "Programming Languages",
        "Formatters"
    ],
    "extensionDependencies": [
        "ms-python.python"
    ],
    "activationEvents": [
        "onLanguage:python",
        "workspaceContains:pyproject.toml",
        "workspaceContains:.isort",
        "workspaceContains:*.py",
        "onCommand:isort.restart"
    ],
    "main": "./dist/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "format-check": "prettier --check 'src/**/*.ts' 'build/**/*.yml' '.github/**/*.yml'",
        "test": "node ./out/test/runTest.js",
        "vsce-package": "vsce package -o isort.vsix"
    },
    "contributes": {
        "languages": [
            {
                "filenames": [
                    "pyproject.toml",
                    ".isort"
                ],
                "id": "toml"
            }
        ],
        "configuration": {
            "properties": {
                "isort.trace": {
                    "default": "error",
                    "description": "The trace level the extension logs at, defaults to 'error'",
                    "enum": [
                        "debug",
                        "error",
                        "info",
                        "off",
                        "warn"
                    ],
                    "scope": "window",
                    "type": "string"
                },
                "isort.args": {
                    "default": [],
                    "description": "Arguments passed in. Each argument is a separate item in the array.",
                    "items": {
                        "type": "string"
                    },
                    "scope": "resource",
                    "type": "array"
                },
                "isort.path": {
                    "default": [],
                    "description": "When set to a path to isort binary, extension will use that for formatting. NOTE: Using this option may slowdown formatting.",
                    "scope": "resource",
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                }
            }
        },
        "commands": [
            {
                "title": "Restart Server",
                "category": "isort Formatter",
                "command": "isort.restart"
            }
        ]
    },
    "dependencies": {
        "fs-extra": "^10.1.0",
        "vscode-languageclient": "^7.0.0"
    },
    "devDependencies": {
        "@types/fs-extra": "^9.0.13",
        "@types/vscode": "^1.64.0",
        "@types/glob": "^7.2.0",
        "@types/node": "14.x",
        "@typescript-eslint/eslint-plugin": "^5.28.0",
        "@typescript-eslint/parser": "^5.28.0",
        "@vscode/test-electron": "^2.1.4",
        "eslint": "^8.17.0",
        "glob": "^8.0.3",
        "prettier": "^2.7.0",
        "typescript": "^4.7.3",
        "ts-loader": "^9.3.0",
        "webpack": "^5.73.0",
        "webpack-cli": "^4.10.0",
        "vsce": "^2.9.1"
    }
}
